{
    "manifest_version": 3,
    "name": "SpiderPin",
    "version": "1.0",
    "description": "蜘蛛钉，让元素随心所欲地固定与移动！",
    "icons": {
        "16": "images/icon/暗影蜘蛛侠_16.png",
        "48": "images/icon/暗影蜘蛛侠_48.png",
        "128": "images/icon/暗影蜘蛛侠_128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon/暗影蜘蛛侠_16.png",
            "48": "images/icon/暗影蜘蛛侠_48.png",
            "128": "images/icon/暗影蜘蛛侠_128.png"
        }
    }
}